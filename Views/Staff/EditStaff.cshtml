@using EF_Core.Models.DTOs.ResponseModels
@model StaffResponsModel
@* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/addFood.css" /> *@
@{
    Layout = "~/Views/Shared/_SecondLayOut.cshtml";
}
    <div class="row">
        <div class="col-md-12">
            <h2>Update Staff</h2>
            <form asp-action="EditStaff">
                <div class="form-group">
                    <label for="Data.User.FirstName">First Name</label>
                    <input for="Data.User.FirstName" type="text" name="Data.User.FirstName" id="FirstName" class="form-control" value="@Model.Data.User.Name"/>
                </div>
                 <div class="form-group">
                    <label for="Data.User.LastName">Last Name</label>
                    <input type="text" name="Data.User.LastName" id="LastName" class="form-control" />
                </div>
                 <div class="form-group">
                    <label for="Data.User.PhoneNumber">Phone Number</label>
                    <input type="number" name="Data.User.PhoneNumber" id="phone" class="form-control" value="@Model.Data.User.PhoneNumber"/>
                </div>
                <div class="form-group">
                 <label for="Role">Role</label>
                 <select name="Role" class="form-control">
                 <option value="none" disabled>--select role--</option>
                 <option value="1">Admin</option>
                 <option value="2" >Cook</option>
                 <option value="3" >Cleaner</option>
                 <option value="4" >Transporter</option>
                 </select>
                 </div>
                <div class="form-group">
                 <label for="Gender">Gender</label>
                 <select name="Gender" class="form-control">
                 <option value="none" disabled>--select gender--</option>
                 <option value="1">Male</option>
                 <option value="2" >Female</option>
                 <option value="3" >Others</option>
                 </select>
                 </div>
                 <div class="form-group">
                    <label for="Data.User.NumberLine">Number Line</label>
                    <input type="number" name="Data.User.NumberLine" id="PhoneNumber" class="form-control" value="@Model.Data.User.NumberLine"/>
                </div>
                 <div class="form-group">
                    <label for="Data.User.Street">Street</label>
                    <input type="text" name="Data.User.Street" id="Street" class="form-control" value="@Model.Data.User.Street"/>
                </div>
                 <div class="form-group">
                    <label for="Data.User.State">State</label>
                    <input type="text" name="Data.User.State" id="State" class="form-control" value="@Model.Data.User.State"/>
                </div>
                 <div class="form-group">
                    <label for="Data.User.City">City</label>
                    <input type="text" name="Data.User.City" id="City" class="form-control" value="@Model.Data.User.City"/>
                </div>
                 <div class="form-group">
                    <label for="Data.User.Country">Country</label>
                    <input type="text" name="Data.User.Country" id="Country" class="form-control" value="@Model.Data.User.Country"/>
                </div>
                 <div class="form-group">
                    <label for="Data.User.PostalCode">Postal Code</label>
                    <input type="number" name="Data.User.PostalCode" id="PostalCode" class="form-control" value="@Model.Data.User.PostalCode"/>
                </div>
                 <div class="form-group">
                    <label for="DathOfBirth">Date of Birth</label>
                    <input type="date" name="DathOfBirth" id="DateOfBirth" class="form-control" value="@Model.Data.DathOfBirth"/>
                </div>
                 <div class="form-group">
                    <label for="NextOfKin">Next Of Kin</label>
                    <input type="text" name="NextOfKin" id="NextOfKin" class="form-control" value="@Model.Data.NextOfKin"/>
                </div>
                <button type="submit">Update</button>
            </form>
        </div>
    </div>
